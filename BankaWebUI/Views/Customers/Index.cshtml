@model IEnumerable<BankaWebEL.DTOs.CustomerDTO>

<h2>Müşteriler</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a href="/Customers/Edit/@customer.Id" class="btn btn-primary">Düzenle</a>
                    <a href="/Customers/Delete/@customer.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Customers/Create" class="btn btn-success">Yeni Müşteri Ekle</a>
