@model BankaWebUI.Models.LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h2 class="text-center">Kullanıcı Girişi</h2>
                    <hr class="my-4">
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="role" value="@ViewBag.Role" />

                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label for="Password">Şifre</label>
                            <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
